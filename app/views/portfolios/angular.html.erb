<h1>Angular Portfolios Page</h1>
<p id="notice"><%= notice %></p>

<p><%= link_to "Create New Portfolio", new_portfolio_path %></p>
<% @angular_portfolio_items.each do |portfolio| %>

<p><%= link_to portfolio.title, portfolio_path(portfolio.id) %></p>
<p><%= portfolio.subtitle %></p>
<p><%= portfolio.body %></p>
<%= image_tag portfolio.thumb_image unless portfolio.thumb_image.nil? %>
<%= link_to "Edit", edit_portfolio_path(portfolio.id) %>
<td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>

<% end %>
